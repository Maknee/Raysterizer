#version 450

// ------------------------------------------------------------------------
// OUTPUTS ----------------------------------------------------------------
// ------------------------------------------------------------------------

layout(location = 0) out vec2 FS_IN_TexCoord;

out gl_PerVertex
{
    vec4 gl_Position;
};

// ------------------------------------------------------------------------
// MAIN -------------------------------------------------------------------
// ------------------------------------------------------------------------

void main()
{
    FS_IN_TexCoord = vec2((gl_VertexIndex << 1) & 2, gl_VertexIndex & 2);
    gl_Position    = vec4(FS_IN_TexCoord * 2.0f - 1.0f, 0.0f, 1.0f);
}

